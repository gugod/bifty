<%args>
$type   => 'list'
$author => undef
$tag    => undef
</%args>
<%init>
my $t = ( $type eq 'list' ) ? 'list_of_posts' : 'page_of_posts';
my $title = defined $author
    ? "$author"
    : defined $tag
    ? "Tag :: $tag"
    : Jifty->config->framework('ApplicationName');

</%init>
<&|/_elements/wrapper, title => $title &>
<% Jifty->web->region( name => 'weblogs', path => "/fragments/$t" )%>
</&>
